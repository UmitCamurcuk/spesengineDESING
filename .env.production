# Production Environment Variables
# API Configuration
VITE_API_BASE_URL=https://api.spesengine.com/api
VITE_API_TIMEOUT=30000

# App Configuration
VITE_APP_NAME=SpesEngine
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Authentication
VITE_AUTH_TOKEN_KEY=spes_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=spes_refresh_token
VITE_AUTH_TOKEN_EXPIRY=3600

# Features
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LOGGING=true

# Logging
VITE_LOG_LEVEL=error
VITE_LOG_CONSOLE=false

# Development Tools
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_HOT_RELOAD=false

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Search
VITE_SEARCH_DEBOUNCE=300
VITE_MIN_SEARCH_LENGTH=2

# Performance
VITE_ENABLE_VIRTUAL_SCROLLING=true
VITE_LAZY_LOAD_THRESHOLD=100

# Analytics
VITE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
